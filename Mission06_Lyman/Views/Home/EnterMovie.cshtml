@{
}
@model Movie



<div class="container mt-5">
    <h1 class="text-center">Enter a Movie</h1>
    
    <form method="post" class="mx-auto col-md-6 border p-4 rounded shadow-sm bg-light">
        <div class="mb-3">
            <label for="Category" class="form-label">Category:</label>
            <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))" class="form-select">
                <option value="">-- Select a Category --</option>
            </select>
        </div>

        <input type="hidden" asp-for="MovieId"/>

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title:</label>
            <input asp-for="Title" class="form-control"/>
        </div>

        <div class="mb-3">
            <label asp-for="Year" class="form-label">Year:</label>
            <input asp-for="Year" class="form-control"/>
        </div>

        <div class="mb-3">
            <label asp-for="Director" class="form-label">Director:</label>
            <input asp-for="Director" class="form-control"/>
        </div>

        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Rating:</label>
            <select asp-for="Rating" class="form-select">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Edited" class="form-label">Edited:</label>
            <select asp-for="Edited" class="form-select">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="LentTo" class="form-label">Lent to:</label>
            <input asp-for="LentTo" class="form-control"/>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label">Notes:</label>
            <input asp-for="Notes" class="form-control"/>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="CopiedToPlex" class="form-check-input" type="checkbox" />
            <label asp-for="CopiedToPlex" class="form-check-label">Copied to Plex</label>
        </div>


        <button type="submit" class="btn btn-primary w-100">Submit Movie</button>

        <div asp-validation-summary="All" class="text-danger mt-3"></div>
    </form>
</div>

